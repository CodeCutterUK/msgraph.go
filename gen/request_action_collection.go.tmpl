//
func (b *{{$ySymBindingType}}{{$ySymName}}RequestBuilder) Request() *{{$ySymBindingType}}{{$ySymName}}Request {
    return &{{$ySymBindingType}}{{$ySymName}}Request{
        BaseRequest: BaseRequest{ baseURL: b.baseURL, client:  b.client, requestObject: b.requestObject },
    }
}

//
type {{$ySymBindingType}}{{$ySymName}}Request struct { BaseRequest }

//
func (r *{{$ySymBindingType}}{{$ySymName}}Request) Do(method, path string, reqObj interface{}) (resObj *{{$yTypeType}}, err error) {
	err = r.JSONRequestWithPath(method, path, reqObj, &resObj)
	return
}

//
func (r *{{$ySymBindingType}}{{$ySymName}}Request) Paging(method, path string, obj interface{}) ([]{{$yTypeType}}, error) {
	req, err := r.NewJSONRequestWithPath(method, path, obj)
	if err != nil {
		return nil, err
	}
	res, err := r.client.Do(req)
	if err != nil {
		return nil, err
	}
	var values []{{$yTypeType}}
	for {
		defer res.Body.Close()
		if res.StatusCode != http.StatusOK {
			b, _ := ioutil.ReadAll(res.Body)
			return nil, fmt.Errorf("%s: %s", res.Status, string(b))
		}
		var (
			paging Paging
			value  []{{$yTypeType}}
		)
		err := json.NewDecoder(res.Body).Decode(&paging)
		if err != nil {
			return nil, err
		}
		err = json.Unmarshal(paging.Value, &value)
		if err != nil {
			return nil, err
		}
		values = append(values, value...)
		if len(paging.NextLink) == 0 {
			return values, nil
		}
		res, err = r.client.Get(paging.NextLink)
		if err != nil {
			return nil, err
		}
	}
}

//
func (r *{{$ySymBindingType}}{{$ySymName}}Request) Get() ([]{{$yTypeType}}, error) {
	var query string
	if r.query != nil {
		query = "?" + r.query.Encode()
	}
	return r.Paging("GET", query, nil)
}
